{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "expo",
      "node",
      "jest"
    ],
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "src/**/*",
    "nativewind-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
